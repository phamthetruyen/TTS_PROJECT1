<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F3F4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvA"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ic_background_color"
        android:paddingLeft="20dp"
        android:text="Trending"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/randomFolder"
        android:background="@drawable/ic_background_color1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvA" />

    <TextView
        android:id="@+id/tvB"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ic_background_color"
        android:paddingLeft="20dp"
        android:text="Icon"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/randomFolder" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvFolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvB" />

</androidx.constraintlayout.widget.ConstraintLayout>